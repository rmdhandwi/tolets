<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp"
    android:layout_gravity="center"
    android:backgroundTint="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Ikon Toilet -->
        <ImageView
            android:id="@+id/iconToilet"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_wc"
            android:contentDescription="Toilet Icon"
            android:layout_marginEnd="16dp"
            tools:ignore="HardcodedText" />

        <!-- Judul & Lokasi -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtToiletTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toilet 1"
                android:fontFamily="@font/roboto_bold"
                android:textSize="16sp"
                android:textColor="#000000"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/txtToiletLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lokasi"
                android:fontFamily="@font/roboto_condensed_regular"
                android:textSize="16sp"
                android:textColor="#555555"
                android:layout_marginTop="4dp"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <!-- Ikon Edit -->
        <ImageView
            android:id="@+id/btnEdit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:contentDescription="Edit Toilet"
            android:src="@drawable/pen"
            tools:ignore="HardcodedText,ImageContrastCheck" />

        <!-- Ikon Delete -->
        <ImageView
            android:id="@+id/btnDelete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/delet"
            android:contentDescription="Delete Toilet"
            android:layout_marginStart="8dp"
            tools:ignore="HardcodedText" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
